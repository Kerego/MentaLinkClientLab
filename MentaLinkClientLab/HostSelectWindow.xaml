<Window x:Class="MentaLinkClientLab.HostSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MentaLinkClientLab"
        mc:Ignorable="d"
        Title="HostSelectWindow" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Host: "></TextBlock>
			<TextBox Name="HostBox" HorizontalAlignment="Center" MinWidth="80" VerticalAlignment="Center"></TextBox>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="User: "></TextBlock>
			<TextBox Name="UserBox" HorizontalAlignment="Center" MinWidth="80" VerticalAlignment="Center"></TextBox>
		</StackPanel>
		<Button Click="Button_Click" Content="Connect" VerticalAlignment="Center"></Button>
		<TextBlock Name="ConnectLabel"></TextBlock>
    </StackPanel>
</Window>
